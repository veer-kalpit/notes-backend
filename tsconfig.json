{
 "compilerOptions": {
  "target": "ES2020",
  "module": "CommonJS",
  "moduleResolution": "Node",
  "outDir": "dist",
  "rootDir": "src",
  "esModuleInterop": true,
  "strict": true,
  "skipLibCheck": true,
  "resolveJsonModule": true,
  "allowSyntheticDefaultImports": true,
  "forceConsistentCasingInFileNames": true,
  "noImplicitAny": true,
  "types": ["node"]
 }
}
